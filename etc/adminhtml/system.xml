<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="web">
            <group id="upward" translate="label" type="text" sortOrder="300"
                showInDefault="1" showInWebsite="0" showInStore="0">
                <label>UPWARD PWA Configuration</label>
                <field id="config_path" type="text" translate="label,comment"
                    sortOrder="20" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>UPWARD Config File</label>
                    <config_path>web/upward/path</config_path>
                    <comment>Server path to YAML configuration file for UPWARD</comment>
                </field>
                <field id="front_names_to_skip" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="30" translate="label,comment" type="textarea">
                    <label>Front Name Whitelist</label>
                    <comment>Line break separated list of URL's that will load the default Magento frontend.</comment>
                </field>
                <field id="prerender_enabled" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="40" translate="label,comment" type="select">
                    <label>Enable prerender for search bots</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment>If enabled requests from a crawler will be sent to Prerender.io for the static HTML.</comment>
                </field>
                <field id="prerender_url" showInDefault="1" showInStore="0" showInWebsite="0" sortOrder="50" translate="label,comment" type="text">
                    <label>Prerender URL</label>
                    <comment>https://service.prerender.io, or see https://github.com/prerender/prerender for testing locally</comment>
                </field>
                <field id="prerender_token" showInDefault="1" showInStore="0" showInWebsite="0" sortOrder="60" translate="label" type="text">
                    <label>Prerender Token</label>
                </field>
            </group>
        </section>
    </system>
</config>
